<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolbarIcon">
        <item name="android:layout_width">@dimen/toolbar_icon_size</item>
        <item name="android:layout_height">@dimen/toolbar_icon_size</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/low_padding</item>
    </style>


    <style name="ToolbarIcon.MediumMargin">
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_grey</item>
    </style>

    <style name="Divider.LargeMargin">
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/large_margin
        </item>
    </style>

    <style name="BaseBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>