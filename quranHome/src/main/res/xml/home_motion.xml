<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="none"
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200"
        motion:motionInterpolator="linear">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/viewPager" />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="10"
                motion:motionTarget="@id/appBar" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@id/appBar" />


            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/inputCard">
                <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="0dp" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="10"
                motion:motionTarget="@id/inputCard">
                <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="@dimen/search_input_radius" />
            </KeyAttribute>

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/inputCard" />

        <Constraint
            android:id="@id/inputCard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="?appBarLayoutStyle"
            android:layout_marginTop="55dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/inputCard" />

        <Constraint
            android:id="@id/inputCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_input_height"
            android:layout_marginStart="@dimen/search_input_margin"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="@dimen/search_input_margin"
            motion:layout_constraintBottom_toBottomOf="@id/tabLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/inputCard"
            motion:layout_constraintEnd_toEndOf="@id/inputCard"
            motion:layout_constraintTop_toTopOf="@id/inputCard" />

    </ConstraintSet>

</MotionScene>
