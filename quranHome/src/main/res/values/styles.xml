<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayoutTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/english_regular_light</item>
    </style>

    <style name="TabLayout">
        <item name="tabMinWidth">100dp</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">auto</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabLayoutTitle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>