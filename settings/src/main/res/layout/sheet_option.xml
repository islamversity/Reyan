<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingBottom="50dp"
    android:orientation="vertical">

    <View
        android:layout_width="35dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/min_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_handler" />

    <ImageView
        android:id="@+id/backButton"
        style="@style/ToolbarIcon"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/medium_margin"
        android:src="@drawable/ic_outline_close"
        app:tint="@color/immersive_background" />

    <com.islamversity.base.epoxyhelper.EpoxyAsyncRecyclerView
        android:id="@+id/epoxyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_below="@+id/backButton"
        android:orientation="vertical"
        tools:itemCount="114"
        tools:listitem="@layout/row_option" />

</RelativeLayout>